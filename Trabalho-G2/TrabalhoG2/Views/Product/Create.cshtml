
@{
    ViewBag.Title = "Adicionar um novo produto";
}

<section class="container">
    <article>
        <h2>Adicionar um novo produto</h2>
        <hr />
        <a class="btn btn-info" href="/Product/Index">Voltar</a>
    </article>
    <article>
        <form method="post" action="/Product/Create">
            <div class="form-group">
                <label>Nome do Produto</label>
                <br />
                <input type="text" required="true" name="product_name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="form-control" />
            </div>
        </form>
    </article>
</section>

