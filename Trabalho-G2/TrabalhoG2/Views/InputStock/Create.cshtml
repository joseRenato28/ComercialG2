
@{
    ViewBag.Title = "Create";
}

<section class="container">
    <article>
        <h2>Adicionar uma nova entrada de estoque</h2>
        <hr />
        <a class="btn btn-info" href="/InputStock/Index">Voltar</a>
    </article>
    <article>
        <form method="post" action="/InputStock/Create">
            <div class="form-group">
                <label>Fornecedor</label>
                <br />
                <input type="text" required="true" name="supplier" class="form-control" />
            </div>
            <div class="form-group">
                <label>Data de entrada</label>
                <br />
                <input type="date" required="true" name="entry_date" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="form-control" />
            </div>
        </form>
    </article>
</section>
