
@{
    ViewBag.Title = "Create";
}

<section class="container">
    <article>
        <h2>Adicionar uma nova saída de estoque</h2>
        <hr />
        <a class="btn btn-info" href="/OutputStock/Index">Voltar</a>
    </article>
    <article>
        <form method="post" action="/OutputStock/Create">
            <div class="form-group">
                <label>Setor</label>
                <br />
                <input type="text" required="true" name="sector" class="form-control" />
            </div>
            <div class="form-group">
                <label>Data de saída</label>
                <br />
                <input type="date" required="true" name="output_date" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="form-control" />
            </div>
        </form>
    </article>
</section>

